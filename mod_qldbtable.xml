<?xml version="1.0" encoding="utf-8"?>
<extension
	type="module"
	client="site"
	method="upgrade">
	<name>qldbtable</name>
	<author>Mareike Riegel</author>
	<creationDate>2015</creationDate>
	<copyright>ql.de</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>mareike.riegel@ql.de</authorEmail>
	<authorUrl>ql.de</authorUrl>
	<version>1.0.0</version>
	<description>MOD_QLDBTABLE_XML_DESCRIPTION</description>
	<updateservers>
        <server type="extension" priority="1" name="qldbtable - Updates">https://raw.githubusercontent.com/hoochicken/mod_qlform/main/_jupdate/mod_qldbtable.xml</server>
    </updateservers>
	<files>
		<filename module="mod_qldbtable">mod_qldbtable.php</filename>
		<folder>_jupdate</folder>
		<folder>css</folder>
		<folder>js</folder>
		<folder>language</folder>
		<folder>tmpl</folder>
		<folder>php</folder>
		<filename>helper.php</filename>
		<filename>index.html</filename>
		<filename>license.txt</filename>
		<filename>mod_qldbtable.xml</filename>
	</files>
	<media folder="media" destination="mod_qldbtable">
        <folder>css</folder>
        <folder>js</folder>
    </media>
	<languages>
		<language tag="en-GB">language/en-GB/en-GB.mod_qldbtable.ini</language>
		<language tag="en-GB">language/en-GB/en-GB.mod_qldbtable.sys.ini</language>
		<language tag="de-DE">language/de-DE/de-DE.mod_qldbtable.ini</language>
		<language tag="de-DE">language/de-DE/de-DE.mod_qldbtable.sys.ini</language>
	</languages>
	<config>
		<fields name="params" addfieldpath="/modules/mod_qldbtable/php/fields" addrulepath="/modules/mod_qldbtable/php/rules">
            <fieldset name="basic">
				<field name="tablename" default="#__" label="MOD_QLDBTABLE_TABLENAME_LABEL" description="MOD_QLDBTABLE_TABLENAME_DESC" />
				<field name="conditions" type="textarea" default="state=1" label="MOD_QLDBTABLE_CONDITIONS_LABEL" description="MOD_QLDBTABLE_CONDITIONS_DESC" />
				<field name="use_raw_query" type="radio" default="0" label="MOD_QLDBTABLE_USERAWQUERY_LABEL" description="MOD_QLDBTABLE_USERAWQUERY_DESC" class="btn-group btn-group-yesno">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field name="raw_query" type="textarea" default="SELECT * FROM #__tablename WHERE state = 1" label="MOD_QLDBTABLE_RAWQUERY_LABEL" description="MOD_QLDBTABLE_RAWQUERY_DESC" />
            </fieldset>


			<fieldset name="display">
				<field name="field1" type="qldbtablecolumn" label="MOD_QLDBTABLE_FIELD_LABEL" description="MOD_QLDBTABLE_FIELD_DESC" />
				<field name="conditions" type="textarea" default="state=1" label="MOD_QLDBTABLE_CONDITIONS_LABEL" description="MOD_QLDBTABLE_CONDITIONS_DESC" />
				<field name="use_raw_query" type="radio" default="0" label="MOD_QLDBTABLE_USERAWQUERY_LABEL" description="MOD_QLDBTABLE_USERAWQUERY_DESC" class="btn-group btn-group-yesno">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field name="raw_query" type="textarea" default="SELECT * FROM #__tablename WHERE state = 1" label="MOD_QLDBTABLE_RAWQUERY_LABEL" description="MOD_QLDBTABLE_RAWQUERY_DESC" />
			</fieldset>


			<fieldset
				name="advanced">
				<field
					name="layout"
					type="modulelayout"
					label="JFIELD_ALT_LAYOUT_LABEL"
					description="JFIELD_ALT_MODULE_LAYOUT_DESC" />

				<field
					name="moduleclass_sfx"
					type="text"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />

				<field
					name="cache"
					type="list"
					default="1"
					label="COM_MODULES_FIELD_CACHING_LABEL"
					description="COM_MODULES_FIELD_CACHING_DESC">
					<option
						value="1">JGLOBAL_USE_GLOBAL</option>
					<option
						value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>

				<field
					name="cache_time"
					type="text"
					default="900"
					label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
					description="COM_MODULES_FIELD_CACHE_TIME_DESC" />
				<field
					name="cachemode"
					type="hidden"
					default="static">
					<option
						value="static"></option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
